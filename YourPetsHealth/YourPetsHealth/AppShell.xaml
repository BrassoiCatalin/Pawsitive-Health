<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourPetsHealth.AppShell"
             xmlns:views="clr-namespace:YourPetsHealth.Views">
    <Shell.FlyoutHeader>
        <views:HeaderContentView/>
    </Shell.FlyoutHeader>
    
    <FlyoutItem Title="TabMenu"
                Shell.TabBarIsVisible="False"
                FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home" IsTabStop="True" ContentTemplate="{DataTemplate views:StartUpView}"/>
        <ShellContent Title="Browse Clinics" IsTabStop="True" ContentTemplate="{DataTemplate views:BrowseClinicsView}"/>
        <ShellContent Title="Manage Clinic" IsTabStop="True" ContentTemplate="{DataTemplate views:ManageClinicView}"/>
    </FlyoutItem>
    
    <ShellContent Title="About" ContentTemplate="{DataTemplate views:AboutView}"/>
</Shell>